<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/textview_setting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="GWL"
        android:textColor="#c8ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_setting_reset"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/custom_btn_reset"
        android:drawablePadding="-8dp"
        android:drawableRight="@drawable/ic_refresh"
        android:paddingRight="8dp"
        android:text="Reset"
        android:textAllCaps="false"
        android:textColor="#c8ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textview_setting_name"
        android:layout_marginTop="14dp"
        android:background="#BEBEBE" />
</RelativeLayout>