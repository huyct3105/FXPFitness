<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/ln_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_weight="2"
            android:id="@+id/img_exercise"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ABC"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_content_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1234"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/txt_rep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1 minute"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:id="@+id/img_video"
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_margin="5dp"
            android:background="@drawable/play_icon_normal"
            android:gravity="right"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"></LinearLayout>
</LinearLayout>